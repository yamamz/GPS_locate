<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.yamamz.gpslocate.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view6"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Acurracy"

                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_near_me_pink_500_48dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/AccuracyLavel"

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:textSize="@dimen/heading_text"/>

                <TextView
                    android:textSize="@dimen/text_size"


                    android:id="@+id/AcurracyText"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="8dp"
                android:id="@+id/DMS"

                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_location_green_a700_48dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView

                android:textSize="@dimen/heading_text"

                android:id="@+id/DMSlabel"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

              />
            <TextView

                android:textSize="@dimen/text_size"


                android:textColor="@color/textColor"
                android:id="@+id/textViewLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size"

                android:textColor="@color/textColor"
                android:id="@+id/textViewLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Dec"

            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_black_48dp"/>
   </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView

            android:textSize="@dimen/heading_text"

            android:id="@+id/DF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

          />
        <TextView

            android:textSize="@dimen/text_size"

            android:textColor="@color/textColor"
            android:id="@+id/textViewLatitudeDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size"

            android:textColor="@color/textColor"
            android:id="@+id/textViewLongitudeDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
android:id="@+id/card_view4"
android:layout_gravity="center"
android:layout_width="fill_parent"
android:layout_height="70dp"
android:layout_margin="5dp"
card_view:cardCornerRadius="2dp"
card_view:contentPadding="4dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/UTM1"

        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_room_red_900_48dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView

        android:textSize="@dimen/heading_text"

        android:id="@+id/UTM"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

      />
    <TextView

        android:textSize="@dimen/text_size"
        android:id="@+id/textViewLongLatLongUTM"
        android:textColor="@color/textColor"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_viewELEVATION"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Elevimage"

                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_terrain_green_a700_48dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:textSize="@dimen/heading_text"

                android:id="@+id/Elev"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

           />

            <TextView
                android:textSize="@dimen/text_size"

                android:textColor="@color/textColor"
                android:id="@+id/textViewElevation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/places"

                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_location_green_a700_48dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ReverseGeo"

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:textSize="@dimen/heading_text"/>



    <TextView
                    android:textSize="@dimen/text_size"


                    android:id="@+id/place"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>


